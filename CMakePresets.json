{
    "version": 3,
    "configurePresets": [
        {
            "name": "base",
            "displayName": "base preset",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-${presetName}",
            "installDir": "$env{KF6}",
            "hidden": true
        },
        {
            "name": "dev-clang",
            "displayName": "dev-clang",
            "cacheVariables": {
                "CMAKE_SHARED_LINKER_FLAGS": "-fuse-ld=mold"
            },
            "environment": {
                "CXX": "clang++",
                "CCACHE_DISABLE": "ON"
            },
            "inherits": [
                "dev"
            ]
        },
        {
            "name": "dev-mold",
            "displayName": "Build as debug + using mold linker",
            "cacheVariables": {
                "CMAKE_SHARED_LINKER_FLAGS": "-fuse-ld=mold"
            },
            "inherits": [
                "dev"
            ]
        },
        {
            "name": "dev",
            "displayName": "Build against",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            },
            "inherits": [
                "base"
            ]
        },
        {
            "name": "dev-bergamot-plugins",
            "displayName": "Build against + bergamot plugins",
            "binaryDir": "${sourceDir}/build-bergamot",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BERGAMOT_TRANSLATOR_PLUGIN": "ON",
                "BLA_PREFER_PKGCONFIG": "ON",
                "BLA_PKGCONFIG_BLAS": "openblas",
                "cblas_cblas_LIBRARY": "cblas",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            },
            "inherits": [
                "base"
            ]
        },
        {
            "name": "asan",
            "displayName": "Build with Asan support.",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "ECM_ENABLE_SANITIZERS": "'address;undefined'",
                "CMAKE_SHARED_LINKER_FLAGS": "-fuse-ld=mold"
            },
            "inherits": [
                "base"
            ]
        },
        {
            "name": "unity",
            "displayName": "Build with CMake unity support.",
            "cacheVariables": {
                "USE_UNITY_CMAKE_SUPPORT": "ON"
            },
            "inherits": [
                "dev"
            ]
        },
        {
            "name": "release",
            "displayName": "Build as release mode.",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            },
            "inherits": [
                "base"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "dev-clang",
            "configurePreset": "dev-clang"
        },
        {
            "name": "dev-mold",
            "configurePreset": "dev-mold"
        },
        {
            "name": "asan",
            "configurePreset": "asan"
        },
        {
            "name": "dev-bergamot-plugins",
            "configurePreset": "dev-bergamot-plugins"
        },
        {
            "name": "dev",
            "configurePreset": "dev"
        },
        {
            "name": "release",
            "configurePreset": "release"
        },
        {
            "name": "unity",
            "configurePreset": "unity"
        }
    ]
}
